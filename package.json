{
  "name": "community_chain",
  "version": "0.1.0",
  "type": "module",
  "description": "コミュニティ活動管理のためのICPアプリケーション",
  "keywords": [
    "Internet Computer",
    "ICP",
    "Motoko",
    "JavaScript",
    "Svelte",
    "Community"
  ],
  "scripts": {
